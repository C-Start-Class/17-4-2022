#include <stdio.h>

int main()
{
    int n;
    float count = 0,sum = 0;
    printf("Nhap chieu dai cua mang: ");
    scanf("%d",&n);
    int arr[n];
    for(int i = 0; i < n ; i++){
        scanf("%d",&arr[i]);
        if(arr[i]%2==0){
            sum+=arr[i];
            count++;
        }
    }
    printf("%0.2f",sum/count);
}
